<!DOCTYPE html>
<html>
  <head>
    <title>Diplomacy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'base' %>
    <%= javascript_pack_tag 'application' %>

    <%= yield :packs %>
  </head>

  <body>
    <%= render "shared/navigation" %>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
